package org.tomasino.utils{	public class ArrayUtil	{		public static function quickSort (sourceArray:Array):void		{			var l:int = 0;			var r:int = sourceArray.length - 1;						qs(sourceArray, l, r);						return;		}				private static function qs (s:Array, l:int, r:int):void		{			var i:int = l;			var j:int = r;						var pivotPoint:Object = s[ (l + r) >> 1 ];						while (i <= j)			{				while (s[i] < pivotPoint)				{					i++;				}				while (s[j] > pivotPoint)				{					j--;				}				if (i <= j)				{					var temp:Object = s[i];					s[i] = s[j];					s[j] = temp;					++i;					--j;				}			}						if (l < j)			{				qs(s, l, j);			}						if (i < r)			{				qs(s, i, r);			}						return;		}	}}